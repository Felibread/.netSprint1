@model HomeViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<section class="hero rounded-4 shadow-sm p-5 mb-4">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold mb-3">Monitoramento meteorológico avançado</h1>
            <p class="lead mb-4">
                Explore previsões atualizadas, configure alertas inteligentes e gerencie localizações em um painel unificado.
            </p>
            <a class="btn btn-light btn-lg me-2" asp-controller="Locations" asp-action="Index">
                <i class="bi bi-geo-alt-fill me-2"></i>Gerenciar locais
            </a>
            <a class="btn btn-outline-light btn-lg" asp-action="About">
                <i class="bi bi-info-circle me-2"></i>Saiba mais
            </a>
        </div>
        <div class="col-lg-4 text-center text-lg-end mt-4 mt-lg-0">
            <i class="bi bi-cloud-sun h1 display-1"></i>
        </div>
    </div>
</section>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h6 class="text-uppercase text-muted">Locais cadastrados</h6>
                <h2 class="fw-semibold">@Model.TotalLocations</h2>
                <p class="text-muted mb-0">Locais com monitoramento ativo.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h6 class="text-uppercase text-muted">Alertas avaliados</h6>
                <h2 class="fw-semibold">@Model.TotalAlertsEvaluated</h2>
                <p class="text-muted mb-0">Alertas gerados a partir das leituras recentes.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h6 class="text-uppercase text-muted">Status da aplicação</h6>
                <div class="d-flex align-items-center">
                    <span class="badge bg-success me-2 rounded-pill px-3 py-2">Online</span>
                    <span class="text-muted">Camada Web + APIs REST disponíveis.</span>
                </div>
            </div>
        </div>
    </div>
</div>

<section>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h4 mb-0">Locais em destaque</h2>
        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Create", "Locations")">
            <i class="bi bi-plus-circle me-1"></i>Novo local
        </a>
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.Message))
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.Message
        </div>
    }
    else if (Model.HighlightedLocations.Any())
    {
        <div class="row g-3">
            @foreach (var location in Model.HighlightedLocations)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@location.Name</h5>
                            <p class="card-text text-muted">
                                <small>
                                    <i class="bi bi-compass me-1"></i>
                                    @location.Latitude, @location.Longitude
                                </small>
                            </p>
                            <div class="mt-auto">
                                <a class="btn btn-sm btn-primary" asp-controller="Locations" asp-action="Details" asp-route-id="@location.Id">
                                    Ver detalhes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Nenhum local cadastrado ainda. <a href="@Url.Action("Create", "Locations")">Cadastre o primeiro local</a>.
        </div>
    }
</section>

